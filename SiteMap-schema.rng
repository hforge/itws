<!-- STATE: Warning, for the moment, this file is only a draft -->

<grammar
    xmlns="http://relaxng.org/ns/structure/1.0"
    xmlns:sitemap="http://www.sitemaps.org/schemas/sitemap/0.9"
    datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">

  <start>
    <optional><ref name="sitemapindex" /></optional>
    <optional><ref name="urlset" /></optional>
  </start>

  <define name="sitemapindex">
    <element name="sitemap:sitemapindex">
      <ref name="sitemap" />
    </element>
  </define>

  <define name="sitemap">
    <element name="sitemap:sitemap">
      <ref name="loc" />
    </element>
  </define>

  <define name="urlset">
    <element name="sitemap:urlset">
      <ref name="url" />
    </element>
  </define>

  <define name="url">
    <element name="sitemap:url">
      <ref name="loc" />
      <optional><ref name="lastmod" /></optional>
      <optional><ref name="changefreq" /></optional>
      <optional><ref name="priority" /></optional>
    </element>
  </define>

  <define name="loc">
    <element name="sitemap:loc">
        <text />
    </element>
  </define>

  <define name="lastmod">
    <element name="sitemap:lastmod">
        <text />
    </element>
  </define>

  <define name="changefreq">
    <element name="sitemap:changefreq">
        <text />
    </element>
  </define>

  <define name="priority">
      <element name="sitemap:priority">
        <text />
    </element>
  </define>

</grammar>
